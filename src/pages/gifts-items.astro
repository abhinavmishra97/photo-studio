---
import BaseLayout from "../layouts/BaseLayout.astro";
import CTASection from "../components/CTASection.astro";
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="text-center space-y-3 md:space-y-4">
    <p class="uppercase tracking-[0.3em] text-sm text-[#D97706]">Gift Items</p>
    <h1 class="text-3xl md:text-4xl font-semibold">
      Personalized photo gifts for every occasion.
    </h1>
    <p class="text-[#5A5246] dark:text-[#CDC3B7] max-w-3xl mx-auto">
      Transform your favorite memories into custom gifts — from sublimation
      items to LED frames, magic cups to cushions. Perfect for birthdays,
      anniversaries, and special celebrations.
    </p>
    <div class="flex flex-wrap justify-center gap-3 pt-2">
      <a
        href="#sublimation"
        class="px-4 py-2 bg-[#FBF7F2] rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm hover:bg-[#E8D5B5] transition-colors cursor-pointer"
      >
        Sublimation
      </a>
      <a
        href="#cushions"
        class="px-4 py-2 bg-[#FBF7F2] rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm hover:bg-[#E8D5B5] transition-colors cursor-pointer"
      >
        Cushions
      </a>
      <a
        href="#led"
        class="px-4 py-2 bg-[#FBF7F2] rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm hover:bg-[#E8D5B5] transition-colors cursor-pointer"
      >
        LED Items
      </a>
      <a
        href="#magiccups"
        class="px-4 py-2 bg-[#FBF7F2] rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm hover:bg-[#E8D5B5] transition-colors cursor-pointer"
      >
        Magic Cups
      </a>
    </div>
    <div class="flex flex-wrap justify-center gap-3 pt-4">
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-5 py-3 rounded-full
          bg-gradient-to-r from-[#C9954D] to-[#B8894E] text-white font-semibold
          hover:from-[#D4A056] hover:to-[#C9954D]
          hover:scale-105 hover:shadow-[0_8px_30px_rgba(201,149,77,0.5),0_2px_10px_rgba(0,0,0,0.2)]
          transition-all duration-300
          shadow-[0_4px_15px_rgba(201,149,77,0.4),0_2px_5px_rgba(0,0,0,0.15),inset_0_-2px_5px_rgba(0,0,0,0.2),inset_0_2px_5px_rgba(255,255,255,0.3)]
          hover:translate-y-[-2px]
          active:translate-y-[1px] active:shadow-[0_2px_10px_rgba(201,149,77,0.3),inset_0_2px_5px_rgba(0,0,0,0.3)]"
      >
        Order custom gifts
      </a>
      <a
        href="/gallery"
        class="inline-flex items-center gap-2 px-5 py-3 rounded-full
          border border-[#D97706] text-[#D97706]
          dark:border-[#D4A373] dark:text-[#D4A373]
          font-semibold hover:bg-[#D97706]/10 transition"
      >
        View examples
      </a>
    </div>
  </section>

  <!-- Sublimation Items -->
  <section
    id="sublimation"
    class="mt-16 grid gap-8 md:grid-cols-2 items-center"
  >
    <div class="space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        Sublimation Items
      </h2>
      <p class="text-lg text-[#D97706] font-medium">
        Photo-printed mugs, plates, and keepsakes.
      </p>
      <p class="text-[#5A5246] dark:text-[#CDC3B7] text-justify">
        High-quality sublimation printing on ceramic mugs, photo plates, tiles,
        and more. Your photos are permanently transferred with vibrant colors
        that won't fade or peel over time.
      </p>
      <div class="grid sm:grid-cols-3 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">Products</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            Mugs, plates, tiles, coasters, and more
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">Quality</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            Dishwasher-safe, fade-resistant prints
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">Perfect for</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            Birthdays, anniversaries, corporate gifts
          </p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/sublimation1.jpg"
          alt="Custom photo mugs"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
          style="object-position: 55%"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/sublimation2.jpg"
          alt="Sublimation gifts"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
          style="object-position: right"
        />
      </div>
    </div>
  </section>

  <!-- Cushions -->
  <section id="cushions" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="order-2 md:order-1 grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/cushion2.jpg"
          alt="Custom photo cushions"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/cushion1.webp"
          alt="Personalized cushions"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
    <div class="order-1 md:order-2 space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        Cushions
      </h2>
      <p class="text-lg text-[#D97706] font-medium">
        Soft, custom-printed cushions for home and gifting.
      </p>
      <p class="text-[#5A5246] dark:text-[#CDC3B7] text-justify">
        Transform your favorite photos into cozy cushions. Available in multiple
        sizes and shapes with high-quality fabric and vibrant, long-lasting
        prints. Perfect for home decor or thoughtful gifts.
      </p>
      <div class="grid sm:grid-cols-3 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">Sizes</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            12x12", 16x16", and custom dimensions
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">Shapes</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            Square, heart, round, and more
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">Fabric</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            Soft, durable, and machine-washable
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- LED Items -->
  <section id="led" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        LED Items
      </h2>
      <p class="text-lg text-[#D97706] font-medium">
        Illuminated photo frames and LED gifts.
      </p>
      <p class="text-[#5A5246] dark:text-[#CDC3B7] text-justify">
        Beautiful LED photo frames and night lights that bring your memories to
        life with warm, ambient lighting. Perfect for bedside tables, desks, or
        as unique gifts that stand out.
      </p>
      <div class="grid sm:grid-cols-2 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">LED Frames</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            Backlit photo frames with customizable colors and brightness
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]">Night Lights</h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            3D engraved acrylic lights with photos or custom designs
          </p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/leditem1.webp"
          alt="LED photo frames"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/leditem2.webp"
          alt="LED night lights"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
  </section>

  <!-- Magic Cups & More -->
  <section id="magiccups" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="order-2 md:order-1 grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/magic-cup-2.jpeg"
          alt="Magic mugs"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="images/gifts/magic-mirror-1.webp"
          alt="Custom keyrings and gifts"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
    <div class="order-1 md:order-2 space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        Magic Cups, Mirrors & More
      </h2>
      <p class="text-lg text-[#D97706] font-medium">
        Surprise gifts that reveal hidden photos.
      </p>
      <p class="text-[#5A5246] dark:text-[#CDC3B7] text-justify">
        Magic mugs that reveal photos when filled with hot liquid, magic mirrors
        with hidden messages, colorful cups, and custom keyrings. Unique,
        interactive gifts that create memorable moments.
      </p>
      <div class="grid sm:grid-cols-2 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]" id="magicmirrors">
            Magic Items
          </h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]">
            Heat-sensitive mugs and mirrors with surprise reveals
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4"
        >
          <h3 class="font-semibold text-[#D97706]" id="keyrings">
            Keyrings & Cups
          </h3>
          <p class="mt-1 text-[#5A5246] dark:text-[#CDC3B7]" id="colorcups">
            Custom keyrings, color cups, and small personalized items
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    title="Ready to create"
    subtitle="Let's design your perfect personalized gift."
    description="Share your occasion, product preferences, and photos — we'll help you create meaningful gifts that celebrate your special moments."
  />
</BaseLayout>
