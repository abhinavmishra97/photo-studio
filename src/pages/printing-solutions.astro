---
import BaseLayout from "../layouts/BaseLayout.astro";
import CTASection from "../components/CTASection.astro";
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="text-center space-y-3 md:space-y-4">
    <p class="uppercase tracking-[0.3em] text-sm text-[#A67C52]">
      Printing Solutions
    </p>
    <h1 class="text-3xl md:text-4xl font-semibold">
      Professional printing for photos, designs, and projects.
    </h1>
    <p class="text-[#5A5246] dark:text-[#CDC3B7] max-w-3xl mx-auto">
      From large-format posters to precise A0 scanning and custom cutting — we
      deliver high-quality prints with accurate colors and sharp details.
    </p>
    <div class="flex flex-wrap justify-center gap-3 pt-2">
      <span
        class="px-4 py-2 rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm"
      >
        Large Format
      </span>
      <span
        class="px-4 py-2 rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm"
      >
        A0 Scanning
      </span>
      <span
        class="px-4 py-2 rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm"
      >
        Cameo Cutting
      </span>
      <span
        class="px-4 py-2 rounded-full border border-[#D9D3CC] dark:border-[#3A3835] text-sm"
      >
        Copier Services
      </span>
    </div>
    <div class="flex flex-wrap justify-center gap-3 pt-4">
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-5 py-3 rounded-full
          bg-[#D4A373] text-[#1F1D1A] font-semibold
          hover:translate-y-[-1px] transition shadow"
      >
        Get a quote
      </a>
      <a
        href="/gallery"
        class="inline-flex items-center gap-2 px-5 py-3 rounded-full
          border border-[#A67C52] text-[#A67C52]
          dark:border-[#D4A373] dark:text-[#D4A373]
          font-semibold hover:bg-[#A67C52]/10 transition"
      >
        View samples
      </a>
    </div>
  </section>

  <!-- Large Format Printing -->
  <section
    id="largeformat"
    class="mt-16 grid gap-8 md:grid-cols-2 items-center"
  >
    <div class="space-y-4">
      <p class="uppercase tracking-[0.25em] text-sm text-[#A67C52]">
        Large Format Printing
      </p>
      <h2 class="text-3xl font-semibold">
        Posters, banners, and displays up to wide sizes.
      </h2>
      <p class="text-[#5A5246] dark:text-[#CDC3B7]">
        Perfect for events, exhibitions, retail displays, and architectural
        plans. We print on premium paper, canvas, vinyl, and fabric with vibrant
        colors and sharp detail that lasts.
      </p>
      <ul
        class="list-disc list-inside space-y-1 text-[#5A5246] dark:text-[#CDC3B7]"
      >
        <li>
          <strong>Materials</strong>: Photo paper, canvas, vinyl, fabric, and
          more.
        </li>
        <li>
          <strong>Sizes</strong>: A4 to A0 and custom dimensions.
        </li>
        <li>
          <strong>Uses</strong>: Posters, banners, signage, architectural
          prints.
        </li>
      </ul>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1612178537253-bccd437b730e?auto=format&fit=crop&w=800&q=80"
          alt="Large format printing example"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1626785774573-4b799315345d?auto=format&fit=crop&w=800&q=80"
          alt="Poster printing example"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
  </section>

  <!-- Scanning A0 Size -->
  <section id="scanning" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="order-2 md:order-1 grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1586281380349-632531db7ed4?auto=format&fit=crop&w=800&q=80"
          alt="Document scanning services"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1554224311-beee4f0d696c?auto=format&fit=crop&w=800&q=80"
          alt="High resolution scanning"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
    <div class="order-1 md:order-2 space-y-4">
      <p class="uppercase tracking-[0.25em] text-sm text-[#A67C52]">
        Scanning A0 Size
      </p>
      <h2 class="text-3xl font-semibold">
        High-resolution scanning for large documents.
      </h2>
      <p class="text-[#5A5246] dark:text-[#CDC3B7]">
        Digitize architectural plans, engineering drawings, artwork, and
        historical documents up to A0 size. We deliver high-resolution files
        perfect for archiving, sharing, or reprinting.
      </p>
      <ul
        class="list-disc list-inside space-y-1 text-[#5A5246] dark:text-[#CDC3B7]"
      >
        <li>
          <strong>Resolution</strong>: Up to 600 DPI for crisp, detailed scans.
        </li>
        <li>
          <strong>Formats</strong>: PDF, JPEG, TIFF, and more.
        </li>
        <li>
          <strong>Best for</strong>: Blueprints, maps, posters, and artwork.
        </li>
      </ul>
    </div>
  </section>

  <!-- Cameo 5 Cutting -->
  <section id="cameo" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="space-y-4">
      <p class="uppercase tracking-[0.25em] text-sm text-[#A67C52]">
        Cameo 5 Cutting
      </p>
      <h2 class="text-3xl font-semibold">
        Precision cutting for custom designs and crafts.
      </h2>
      <p class="text-[#5A5246] dark:text-[#CDC3B7]">
        Create custom stickers, decals, labels, and intricate paper designs with
        our Cameo 5 cutting machine. Perfect for personalized gifts, branding,
        and creative projects with clean, precise cuts.
      </p>
      <div
        class="grid sm:grid-cols-2 gap-4 text-sm text-[#5A5246] dark:text-[#CDC3B7]"
      >
        <div class="rounded-xl bg-[#F7F1E9] dark:bg-[#2F2A25] p-3">
          <h3 class="font-semibold">Stickers & Decals</h3>
          <p class="mt-1">
            Custom shapes, logos, and designs on vinyl or paper.
          </p>
        </div>
        <div class="rounded-xl bg-[#F7F1E9] dark:bg-[#2F2A25] p-3">
          <h3 class="font-semibold">Paper Crafts</h3>
          <p class="mt-1">
            Intricate cuts for invitations, cards, and decorations.
          </p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1611532736597-de2d4265fba3?auto=format&fit=crop&w=800&q=80"
          alt="Precision cutting and crafts"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1513506003901-1e6a229e2d15?auto=format&fit=crop&w=800&q=80"
          alt="Custom stickers and decals"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
  </section>

  <!-- Copier / Printing -->
  <section id="copier" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="order-2 md:order-1 grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1565106430482-8f6e74349ca1?auto=format&fit=crop&w=800&q=80"
          alt="Document printing and copying"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A]"
      >
        <img
          src="https://images.unsplash.com/photo-1568667256549-094345857637?auto=format&fit=crop&w=800&q=80"
          alt="Professional printing services"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
    <div class="order-1 md:order-2 space-y-4">
      <p class="uppercase tracking-[0.25em] text-sm text-[#A67C52]">
        Copier / Printing
      </p>
      <h2 class="text-3xl font-semibold">
        Fast, reliable copying and document printing.
      </h2>
      <p class="text-[#5A5246] dark:text-[#CDC3B7]">
        From single pages to bulk orders, we handle all your document printing
        and copying needs. Black & white or color, single or double-sided, with
        binding and finishing options available.
      </p>
      <ul
        class="list-disc list-inside space-y-1 text-[#5A5246] dark:text-[#CDC3B7]"
      >
        <li>
          <strong>Options</strong>: B&W or color, single/double-sided.
        </li>
        <li>
          <strong>Sizes</strong>: A4, A3, legal, and custom.
        </li>
        <li>
          <strong>Finishing</strong>: Binding, lamination, and stapling.
        </li>
      </ul>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    title="Ready to print"
    subtitle="Let's bring your designs to life."
    description="Share your project details, sizes, and quantities — we'll respond with pricing, timelines, and material options."
  />
</BaseLayout>
